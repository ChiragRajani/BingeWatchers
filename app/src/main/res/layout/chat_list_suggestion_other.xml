<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingRight="60dp"
    android:paddingLeft="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/senderEmail"
            android:layout_marginLeft="15dp"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Rose"/>

        <ImageView
            android:id="@+id/picture_text"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginLeft="10dp"
            android:gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:layout_alignLeft="@+id/senderEmail"
            android:background="@drawable/their_message"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:layout_below="@+id/senderEmail"

            android:textSize="18dp"
            android:text="How are you doing? This is a long message that should probably wrap."
            />

    </LinearLayout>

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BingeWatchers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="windowActionBar">true</item>
<!--        <item name="statusBarColor" tools:targetApi="l">?attr/red</item>-->
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.CardView" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="backgroundTint">#f5f5f5</item>
        <item name="textColor">@color/black</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ChatWindow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/light_popcorn</item>
        <item name="textColor">@color/black</item>
    </style>

    <style name="MovieInfo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="textColor">@color/black</item>
        <item name="color">@color/black</item>
    </style>
<style name="TheirMessage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="textColor">@color/black</item>
</style>
    <style name="DrawableBackground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/dashboard_card</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>
    <style name="BottomSheetItem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>

        <item name="android:backgroundTint">@color/holo_light</item>
    </style>
    <style name="ChatLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <item name="backgroundTint">@color/white</item>
            <item name="textColor">#30475E</item>
    </style>
</resources>